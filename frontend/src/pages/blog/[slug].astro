---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { fetchArticles, fetchArticleBySlug, formatDate } from '../../lib/strapi';

export async function getStaticPaths() {
  const articles = await fetchArticles();
  return articles.map(article => ({
    params: { slug: article.slug },
  }));
}

const { slug } = Astro.params;
const article = await fetchArticleBySlug(slug);

if (!article) {
  return Astro.redirect('/404');
}
---

<Layout 
  title={`${article.title} - Tech Studio Blog`}
  description={article.excerpt || article.content.substring(0, 160)}
  image={article.featuredImage}
>
  <Header />
  
  <main>
    <!-- Article Header -->
    <article class="py-16">
      <div class="container mx-auto px-4 max-w-4xl">
        <!-- Breadcrumb -->
        <nav class="mb-8 text-sm text-gray-600">
          <a href="/" class="hover:text-blue-600">Home</a>
          <span class="mx-2">/</span>
          <a href="/blog" class="hover:text-blue-600">Blog</a>
          <span class="mx-2">/</span>
          <span class="text-gray-900">{article.title}</span>
        </nav>

        <!-- Article Meta -->
        <div class="mb-8">
          <div class="flex items-center gap-3 mb-4">
            <span class="bg-blue-100 text-blue-600 px-3 py-1 rounded-full text-sm font-semibold">
              {article.category}
            </span>
            <span class="text-gray-600">
              {formatDate(article.publishedDate || article.publishedAt)}
            </span>
          </div>
          <h1 class="text-4xl font-bold mb-4">{article.title}</h1>
          <p class="text-xl text-gray-600 mb-4">{article.excerpt}</p>
          <div class="flex items-center text-gray-600">
            <span>By {article.author}</span>
          </div>
        </div>

        <!-- Featured Image -->
        {article.featuredImage && (
          <img 
            src={article.featuredImage} 
            alt={article.title}
            class="w-full rounded-lg mb-8"
          />
        )}

        <!-- Article Content -->
        <div class="prose prose-lg max-w-none">
          <div set:html={article.content} />
        </div>

        <!-- Article Footer -->
        <div class="mt-12 pt-8 border-t border-gray-200">
          <a 
            href="/blog"
            class="text-blue-600 hover:text-blue-700 font-semibold"
          >
            ‚Üê Back to Blog
          </a>
        </div>
      </div>
    </article>
  </main>

  <Footer />
</Layout>

<style>
  .prose {
    color: #374151;
    line-height: 1.75;
  }
  
  .prose :global(h2) {
    font-size: 1.875rem;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .prose :global(h3) {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  
  .prose :global(p) {
    margin-bottom: 1.25rem;
  }
  
  .prose :global(ul), .prose :global(ol) {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }
  
  .prose :global(li) {
    margin-bottom: 0.5rem;
  }
  
  .prose :global(a) {
    color: #2563eb;
    text-decoration: underline;
  }
  
  .prose :global(a:hover) {
    color: #1d4ed8;
  }
  
  .prose :global(code) {
    background-color: #f3f4f6;
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
  }
  
  .prose :global(pre) {
    background-color: #1f2937;
    color: #f9fafb;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin-bottom: 1.25rem;
  }
  
  .prose :global(blockquote) {
    border-left: 4px solid #2563eb;
    padding-left: 1rem;
    font-style: italic;
    color: #6b7280;
    margin-bottom: 1.25rem;
  }
</style>
